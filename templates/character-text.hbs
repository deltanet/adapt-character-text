<div class="character-text-inner component-inner">
  {{> component this}}
  <div class="character-text-widget component-widget">
    <div class="character-text-graphic">
      <img src="{{_graphic.src}}" alt="{{_graphic.alt}}" data-large="{{_graphic.large}}" data-medium="{{_graphic.medium}}" data-small="{{_graphic.small}}" {{#if _graphic.alt}} aria-label="{{_graphic.alt}}" tabindex="0"{{else}} class="a11y-ignore" aria-hidden="true" tabindex="-1"{{/if}}/>
	   </div>
	   <div class="character-text-text">
      <div class="bubble">{{{a11y_text _text.body}}}</div>
	   </div>
  </div>
</div>
